            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/prompt_email"
                android:textColorHint="@color/theme_danshal"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/theme_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/theme_danshal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/theme_background"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/theme_danshal"
                    android:textColorHint="@color/theme_danshal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_wachtwoord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/wachtwoord"
                android:textColorHint="@color/theme_danshal"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/theme_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_email"
                app:startIconDrawable="@drawable/ic_key"
                app:startIconTint="@color/theme_danshal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/theme_background"
                    android:inputType="text|textPassword"
                    android:maxLines="1"
                    android:textColor="@color/theme_danshal"
                    android:textColorHint="@color/theme_danshal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
